// Кнопка проверки:
if (exam.stopDate && exam.resolution !== true && exam.resolution !== false) {
    if (!exam.expert || exam.expert._id === userId && !exam.inCheck) {
      Приступить к проверке
    }
    else if (exam.expert && exam.expert._id === userId && exam.inCheck) {
      Отменить проверку
    }
  }

